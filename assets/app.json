{
  "app_id": 1455,
  "state": "active",
  "title": "Tiny for E-Com Plus",
  "slug": "tiny",
  "version": "0.0.1",
  "type": "external",
  "authentication": true,
  "auth_callback_uri": "https://tiny.ecomplus.biz/ecom/auth-callback",
  "auth_scope": {
    "orders": ["GET", "POST", "PATCH", "DELETE"],
    "orders/hidden_metafields": ["GET", "POST", "PATCH"],
    "orders/metafields": ["GET", "POST", "PATCH"],
    "orders/payments_history": ["GET", "POST", "PATCH"],
    "orders/fulfillments": ["GET", "POST", "PATCH"],
    "orders/shipping_lines": ["GET", "POST", "PATCH"],
    "orders/transactions": ["GET", "POST", "PATCH"],
    "procedures": ["GET", "POST", "PATCH", "DELETE"],
    "products": ["GET", "POST", "PATCH", "DELETE"],
    "products/price": ["GET", "POST", "PATCH"],
    "products/quantity": ["GET", "POST", "PATCH"],
    "products/variations": ["GET", "POST", "PATCH"]
  },
  "admin_settings": {
    "access_token": {
      "schema": {
        "type": "string",
        "maxLength": 255,
        "title": "Tiny Api KEY",
        "description": "Chave de acesso para recursos da API"
      },
      "hide": true
    },
    "sync": {
      "schema": {
        "type": "object",
        "title": "Sincronização entre os serviços",
        "required": ["ecom", "tiny"],
        "properties": {
          "ecom": {
            "type": "object",
            "title": "Configurações E-Com Plus",
            "description": "Configuração de sincronizações da E-Com Plus",
            "required": ["products", "orders"],
            "properties": {
              "products": {
                "type": "object",
                "title": "Sincronização de produtos",
                "description": "Defina como os produtos serão mantidos entre as plataformas",
                "required": ["products", "quantity"],
                "properties": {
                  "products": {
                    "type": "boolean",
                    "title": "Produtos E-Com Plus",
                    "description": "Enviar todos os produtos da E-Com Plus pra o Tiny",
                    "default": false
                  },
                  "quantity": {
                    "type": "boolean",
                    "title": "Estoque E-Com Plus",
                    "description": "Enviar estoque de produtos da E-Com Plus pra o Tiny",
                    "default": false
                  }
                }
              },
              "orders": {
                "type": "boolean",
                "title": "Pedidos E-Com Plus",
                "description": "Enviar todos os pedidos da E-Com Plus pra o Tiny",
                "default": false
              }
            }
          },
          "tiny": {
            "type": "object",
            "title": "Configurações Tiny",
            "description": "Configuralçies de sincronizações do Tiny",
            "required": ["quantiy", "financial_status"],
            "properties": {
              "quantiy": {
                "type": "boolean",
                "title": "Estoque Tiny",
                "description": "Atualizar estoque de produtos na E-Com Plus sempre que for alterado no Tiny",
                "default": false
              },
              "financial_status": {
                "type": "boolean",
                "title": "Situação de Pedidos Tiny",
                "description": "Atualizar situação do pedido na E-Com Plus sempre que for alterado no Tiny",
                "default": false
              }
            }
          }
        }
      },
      "hide": true
    }
  }
}
